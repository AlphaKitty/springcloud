<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zyl.cloud.provider.service.mvc.service.mapper.UserMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.zyl.cloud.base.pojo.User">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="phone" property="phone"/>
        <result column="email" property="email"/>
        <result column="password" property="password"/>
        <result column="sex" property="sex"/>
        <result column="mac" property="mac"/>
        <result column="create_time" property="createTime"/>
    </resultMap>

    <!-- 带层级关系的映射 -->
    <resultMap id="NestedResultMap" type="com.zyl.cloud.base.dto.LogUser">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="phone" property="phone"/>
        <result column="email" property="email"/>
        <result column="password" property="password"/>
        <result column="sex" property="sex"/>
        <result column="mac" property="mac"/>
        <result column="create_time" property="createTime"/>
        <collection property="roles" column="create_time"/>
    </resultMap>

</mapper>
